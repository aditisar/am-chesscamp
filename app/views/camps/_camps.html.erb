<table class="table">
  <tr>
    <th>Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Time</th>
    <th>Cost</td>
  </tr>

<% camps.each do |camp| %>
  <tr>
    <td><%= link_to camp.name, camp_path(camp) %></td>
    <td><%= camp.start_date.strftime('%m/%d/%y') %></td>
    <td><%= camp.time_slot=="am" ? "Morning" : "Afternoon" %></td>
    <td><%= number_to_currency(camp.cost) %></td>
    <td><center><%= link_to 'Edit', edit_camp_path(camp), id: 'editbutton', class: "button tiny radius" %></center></td>
  </tr>
<% end %>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate camps, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>