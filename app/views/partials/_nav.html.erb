  <div class="contain-to-grid">
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <%= link_to image_tag('amcc_logo.png'), home_path %>
        </li>
      </ul>

      <section class="top-bar-section">
        <ul class="right">


          <% if can? :manage, :all %>
          <!-- options for curriculums -->
          <li class="has-dropdown">
            <%= link_to "Curriculums", curriculums_path %>
            <ul class="dropdown">
              <li><%= link_to "List Curriculums", curriculums_path %></li>
              <li><%= link_to "Add a Curriculum", new_curriculum_path %></li>
            </ul>
          </li>

          <!-- options for camps -->
          <li class="has-dropdown">
            <%= link_to "Camps", camps_path %>
            <ul class="dropdown">
              <li><%= link_to "List Camps", camps_path %></li>
              <li><%= link_to "Add a Camp", new_camp_path %></li>
            </ul>
          </li>
         
          <% else %>
           <li><%= link_to "Camps", camps_path %></li>
           <li><%= link_to "Curriculums", curriculums_path %></li>
          <% end %>

          <% if can? :manage, :all %>
          <!-- options for instructors only admins should be able to see the list -->
          <li class="has-dropdown">
            <!-- <a href="#">Instructors</a> -->
            <%= link_to "Instructors", instructors_path %>
            <ul class="dropdown">
              <li><%= link_to "List Instructors", instructors_path %></li>
              <li><%= link_to "Add an Instructor", new_instructor_path %></li>
            </ul>
          </li>
          <% end %>

          <li>
           <% if logged_in? %>
            <%= link_to 'Logout', logout_path %>
          <% else %>
            <%= link_to 'Login', login_path %>
          <% end %>
          </li>
        </ul>
      </section>
    </nav>
  </div>