<h3> <small> Active </small></h3> <br />
<table class="table">
  <tr>
    <th>Names</th>
    <th>Ratings</th>
    <th>Times Used</th>
    <th></th>
  </tr>

  <% @active_curriculums.each do |curriculum| %>
  <tr> 
    <td><%= link_to curriculum.name, curriculum_path(curriculum) %></td>
    <td><%= curriculum.min_rating==0 ? "Unrated" : curriculum.min_rating %> - <%= curriculum.max_rating %></td>
    <td><center><%= curriculum.camps.length %><center></td>
    <td><%= link_to 'Edit', edit_curriculum_path(curriculum), id: 'editbutton', class: "button tiny radius" %></td>
  </tr>
  <% end %>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @active_curriculums, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>