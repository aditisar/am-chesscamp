<%= simple_form_for @registration, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Registration </legend>
  <%= f.input :student_id, :collection => Student.active.alphabetical, :include_blank => true %>

		<%= f.input :camp_id, :collection => @possible_camps, :label_method => lambda {  |camp| camp.start_date.strftime('%m/%d/%y') + ' (' + camp.time_slot + ') - '+ camp.name } %>
	
    <%= f.input :payment_status, collection: [['deposit','deposit'],['full','full']], prompt: "Select..." %>
    <%= f.input :points_earned %> 


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', students_path(:student_id), :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
