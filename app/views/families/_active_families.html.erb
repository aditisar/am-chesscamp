<h3> <small> Active </small></h3><br />
<table class="table">
  <tr>
    <th>Family Name</th>
    <th>Phone</th>
<!--     <th>Email</th> -->
    <th></th>
  </tr>

<% @active_families.each do |f| %>
  <tr> 
    <td><%= link_to f.family_name, family_path(f) %></td>
    <td align="center"><%= number_to_phone(f.phone)%></td>
    <!-- <td align="center"><%= mail_to("#{f.email}", "#{f.email}", encode: "javascript") %> </td>  -->
    <td><%= link_to 'Edit', edit_family_path(f), id: 'editbutton', class: "button tiny radius" %></td>
  </tr>
<% end %>
</table>

<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @active_families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

